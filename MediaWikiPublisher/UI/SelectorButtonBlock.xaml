<UserControl x:Class="MediaWikiPublisher.UI.SelectorButtonBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <ToolBar>
        <TextBlock VerticalAlignment="Center" Text="Select " />
        <Button Click="SelectAllButtonClicked" Content="all" />
        <Button Click="SelectNoneButtonClicked" Content=" none" />
    </ToolBar>
</UserControl>
